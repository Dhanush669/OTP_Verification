<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiveOtp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OTP Verification"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            >
        </TextView>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enter the otp send to"
            android:textColor="#817D7D"
            android:textSize="18dp"
            >
        </TextView>
        <TextView
            android:id="@+id/numberr"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#817D7D"
            android:textSize="18dp"
            >
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp">
            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:id="@+id/otpno1"
                android:textSize="18dp"
                android:inputType="number"
                >
            </EditText>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:id="@+id/otpno2"
                android:textSize="18dp"
                android:inputType="number"
                >
            </EditText>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:id="@+id/otpno3"
                android:textSize="18dp"
                android:inputType="number"
                >
            </EditText>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:id="@+id/otpno4"
                android:textSize="18dp"
                android:inputType="number"
                >
            </EditText>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:id="@+id/otpno5"
                android:textSize="18dp"
                android:inputType="number"
                >
            </EditText>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:id="@+id/otpno6"
                android:textSize="18dp"
                android:inputType="number"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive OTP? "
                android:textSize="15dp"
                android:textColor="#6A6A6A"
                >
            </TextView>
            <TextView
                android:id="@+id/resendotp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP."
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                >
            </TextView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/verofyotp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="#6AD3E1"
            app:cardCornerRadius="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Verify OTP"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold"
                >
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>